@model EmployeeAddViewModel

<form method="post" asp-action="NewUser" id="add-employee-form">
    <div class="page-wrapper">
        <div class="content">
            <div class="page-header">
                <div class="page-title">
                    <h4>User Management</h4>
                    <h6>Add/Update User</h6>
                </div>
            </div>

            <div class="text-danger" asp-validation-summary="All"></div>

            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label>First Name</label>
                                <input asp-for="SignUpViewModel.FirstName" type="text">
                            </div>
                            <div class="form-group">
                                <label>User Name</label>
                                <input asp-for="SignUpViewModel.UserName" type="text">
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input asp-for="SignUpViewModel.Email" type="text">
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <div class="pass-group">
                                    <input asp-for="SignUpViewModel.Password" type="password" class=" pass-input">
                                    <span class="fas toggle-password fa-eye-slash"></span>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Last Name</label>
                                <input asp-for="SignUpViewModel.LastName" type="text">
                            </div>
                            <div class="form-group">
                                <label>Phone Number</label>
                                <input asp-for="SignUpViewModel.PhoneNumber" type="text">
                            </div>
                            <div class="form-group">
                                <label>Role</label>
                                <select class="form-select" asp-for="Role" required>
                                    <option value="-1" selected>Choose Role</option>
                                    @if (Model.IdentityRoles is not null)
                                    {
                                        @foreach (var role in Model.IdentityRoles)
                                        {
                                            <option value="@role.Name">@role.Name</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Confirm Password</label>
                                <div class="pass-group">
                                    <input asp-for="SignUpViewModel.ConfirmPassword" type="password" class=" pass-inputs">
                                    <span class="fas toggle-passworda fa-eye-slash"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label> Profile Picture</label>
                                <div class="image-upload image-upload-new">
                                    <input type="file">
                                    <div class="image-uploads">
                                        <img src="~/img/icons/upload.svg" alt="img">
                                        <h4>Drag and drop a file to upload</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <button type="submit" class="btn btn-submit me-2">Submit</button>
                            <a asp-controller="Employee" asp-action="UserLists" class="btn btn-cancel">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</form>


@section Scripts
{
    <script>
        $(document).ready(function ()
        {
            $('#add-employee-form').validate();

            $(".btn-submit").on("click", function (e) {
                e.preventDefault();

                if ($('#add-employee-form').valid()) {
                    showSubmitConfirmation('/Employee/NewUser', "Employee", "#add-employee-form", function () {
                        $('#add-employee-form')[0].reset();
                    });
                }
            });
        });

    </script>
}